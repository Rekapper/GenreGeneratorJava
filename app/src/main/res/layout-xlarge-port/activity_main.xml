<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genre Generator"
        android:id="@+id/textGenre"
        android:textStyle="bold"
        android:textSize="70sp"
        android:layout_below="@+id/adView"
        android:layout_alignRight="@+id/adView"
        android:layout_alignEnd="@+id/adView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:text="New Genre"
        android:id="@+id/buttonGenerator"
        android:textSize="50sp"
        android:background="@drawable/roundshapebtnn"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textGenre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:text="Search Youtube"
        android:id="@+id/buttonYT"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundshapebtnyt"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonGenerator"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonGenerator"
        android:layout_alignEnd="@+id/buttonGenerator"
        android:layout_marginTop="25dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="150dp"
        android:text="Share"
        android:id="@+id/buttonFB"
        android:textSize="40sp"
        android:background="@drawable/roundshapebtn"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/Tweet"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="150dp"
        android:text="Tweet"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="@drawable/roundshapebtnt"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Created By Rekapper"
        android:id="@+id/textView"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="40dp" />

</RelativeLayout>
